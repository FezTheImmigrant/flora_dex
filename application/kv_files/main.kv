<Button>
    background_normal: ''
    background_color: 0.678, 0.917, 0.603,1

<main_kv>

    #size: root.width -100, root.height -100
    #pos: 50,50
    cols:1

    GridLayout:
        cols:3
        size_hint: 0.33,0.2
        Button:
            pos_hint: {"x":0, "top":0}
            text: "Home"
            on_release: on_press:root.show_home()
        Button:
            pos_hint: {"x":0.33, "top":0}
            text: "Camera"
            on_release: on_press:root.show_picture()
        Button:
            pos_hint: {"x":0.66, "top":0}
            text: "Results"
            on_release: on_press:root.show_results()